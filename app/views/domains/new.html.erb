<h1><%= :new_domain.l("Nouveau Domaine") %></h1>
<%= error_messages_for :domain %>
<% form_for(@domain) do |f| %>
  <p>
    <b><%= :language.l("Language") %></b><br />
    <%= language_select :domain, :language %>
  </p>
  <p>
    <%= f.label :name, :name.l %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description, :description.l %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit :create.l("Create") %>
  </p>
<% end %>
<%= link_to :back.l("Back"), domains_path %>

